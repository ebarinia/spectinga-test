// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  locale String
  shipping Boolean
  createdAt DateTime @default(now())
}

model Tractor {
  id Int @id @default(autoincrement())
  name String
  price Int
  img String
  collection String
  year Int
  location String
  speed String
  gearbox String
  engine Int
  airBrakes Boolean @default(false)
  frontLinkage Boolean @default(false)
  frontPTO Boolean @default(false)
  cabSuspension Boolean @default(false)
  frontSuspension Boolean @default(false)
  rearRemoteType String
  numOfRearRemote Int
  frontTyreSize String
  rearTyreSize String
  midAmountValves Boolean @default(false)
  gps String
  pumpSize String
  frontLoader Boolean @default(false)
  createdAt DateTime @default(now())
}